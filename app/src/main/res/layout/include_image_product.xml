<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/semi"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_upload"
                android:layout_gravity="center_vertical"
                app:tint="@color/white"
                android:background="@drawable/background_rounded_blue"
                android:layout_marginRight="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUploadProductPhotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/secondary"
                android:gravity="center_vertical"
                android:text="Unggah Foto Produk"
                android:background="@null" />

        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ganti_gambar"
        android:textColor="@color/quantum_googred700"
        android:textSize="@dimen/_8sdp"
        android:paddingLeft="@dimen/_10sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi"
            android:gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/background_rounded_blue"
            android:padding="@dimen/_10sdp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/no_image"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi"
            android:gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/background_rounded_blue"
            android:padding="@dimen/_10sdp">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/no_image"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi"
            android:gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/background_rounded_blue"
            android:padding="@dimen/_10sdp">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/no_image"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/del1"
            
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/quantum_googred700"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:background="@drawable/ic_delete"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="@string/delete"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/del2"
            
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
