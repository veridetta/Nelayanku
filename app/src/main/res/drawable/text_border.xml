<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item android:drawable="@drawable/text_background" />

    <!-- Border layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Border color -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border width and color -->
        </shape>
    </item>
</layer-list>
